server {
    listen 80{% if static_default %} default_server{% endif %};
    server_name {{ static_hostname }};

{% if static_letsencrypt %}
    location /.well-known/acme-challenge/ {
        alias /srv/letsencrypt/challenges/;
        try_files $uri =404;
    }

{% endif %}
{% if static_ssl %}
    location / {
        return 302 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2{% if static_default %} default_server{% endif %};
    server_name {{ static_hostname }};

    ssl_certificate {{ static_ssl_certificate }};
    ssl_certificate_key {{ static_ssl_certificate_key }};
{% endif %}

    root /srv/{{ static_hostname }};
    charset utf-8;

    location / {
{% if static_index_html_on_404 %}
        try_files $uri /index.html;
{% else %}
        try_files $uri $uri/index.html $uri.html =404;
{% endif %}
    }
}
