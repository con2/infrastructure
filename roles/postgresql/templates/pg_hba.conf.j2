# pg_hba.conf managed by ansible - do not edit manually
# TYPE  DATABASE        USER            ADDRESS                 METHOD
local   all             postgres                                peer
local   all             all                                     md5
host    all             all             127.0.0.1/32            md5
host    all             all             ::1/128                 md5

# external hosts
hostssl all             all             {{ postgresql_access_network }} md5

# docker bridge
host    all             all             172.17.0.1/16           md5

# replication to barman server for backing up
host    replication     {{ postgresql_barman_db_streaming_user }} {{ postgresql_barman_ip }}/32 md5
