server {
    listen 80;
    server_name {{ infotv_insecure_hostname }};

    location ~ ^/static/(.*)$ {
        alias /srv/{{ infotv_hostname }}/public_html/static/$1;
        expires 30m;
    }

    rewrite ^/favicon.ico$ /static/favicon.ico last;
    gzip_static on;

    location / {
        proxy_pass http://localhost:{{ infotv_port }};
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /admin {
        return 302 https://{{ infotv_hostname }}$request_uri;
    }

    location /edit {
        return 302 https://{{ infotv_hostname }}$request_uri;
    }
}
