ALERT NodeAvailableMemoryLow
  IF node_memory_MemAvailable < 250 * 1024 * 1024
  ANNOTATIONS {
    summary = "Memory low",
    description = "Node {{ $labels.instance }} has less than 250 megabytes of memory available."
  }

ALERT NodeDiskSpaceLow
  IF node_filesystem_free{mountpoint="/",device!="rootfs"} < 5 * 1024 * 1024 * 1024
  ANNOTATIONS {
    summary = "Disk space low",
    description = "Node {{ $labels.instance }} has less than 5 gigabytes left on the / file system."
  }
