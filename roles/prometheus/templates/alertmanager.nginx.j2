server {
    listen 80;
    server_name {{ alertmanager_hostname }};

{% if alertmanager_letsencrypt %}
    location /.well-known/acme-challenge/ {
        alias /srv/letsencrypt/challenges/;
        try_files $uri =404;
    }

{% endif %}
{% if alertmanager_ssl %}
    location / {
        return 302 https://$host$request_uri;
    }
}

server {
    listen 443 ssl http2;
    server_name {{ alertmanager_hostname }};

    ssl_certificate {{ alertmanager_ssl_certificate }};
    ssl_certificate_key {{ alertmanager_ssl_certificate_key }};
{% endif %}

    location / {
        proxy_pass http://localhost:{{ alertmanager_port }};
        proxy_read_timeout 300;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;

        auth_basic "{{ alertmanager_hostname }}";
        auth_basic_user_file /etc/nginx/{{ alertmanager_hostname }}.htpasswd;
    }
}
