# example https://github.com/prometheus/prometheus/blob/master/config/testdata/conf.good.yml
# documentation https://prometheus.io/docs/operating/configuration/

global:
  scrape_interval:     15s
  evaluation_interval: 30s

rule_files:
  - /etc/prometheus/rules/*.rules

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']
  - job_name: alertmanager
    static_configs:
      - targets: ['alertmanager:9093']
  - job_name: kompassi
    scheme: https
    static_configs:
      - targets: ['kompassi.eu']

alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets:
            - "alertmanager:9093"
