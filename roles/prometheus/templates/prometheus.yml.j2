# example https://github.com/prometheus/prometheus/blob/master/config/testdata/conf.good.yml
# documentation https://prometheus.io/docs/operating/configuration/

global:
  scrape_interval:     15s
  evaluation_interval: 30s

rule_files:
  - /etc/prometheus/rules/*.rules

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']
  - job_name: alertmanager
    static_configs:
      - targets: ['alertmanager:9093']
  - job_name: node
    static_configs:
      - targets:
          - nuoli.tracon.fi:9100
          - neula.kompassi.eu:9100
          - monokkeli.tracon.fi:9100
          - kurikka.tracon.fi:9100
          - putki.localdomain:9100
          - piilo.tracon.fi:9100
          - siilo.tracon.fi:9100
          - qb1.con2.fi:9100
          - qb2.con2.fi:9100
          - qb3.con2.fi:9100
  - job_name: kompassi
    scheme: https
    static_configs:
      - targets: ['kompassi.eu']

alerting:
  alertmanagers:
    - scheme: http
      static_configs:
        - targets:
            - "alertmanager:9093"
